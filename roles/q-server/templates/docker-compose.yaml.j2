version: '2.3'
services:
  q-server:
    build:
      context: ./build
    container_name: q-server
    restart: unless-stopped
    environment:
      - VIRTUAL_HOST=q-server
      - VIRTUAL_PORT={{ q_server_port }}
      - Q_DATA_MUT
      - Q_DATA_HOT
      - Q_REQUESTS_MODE
      - Q_REQUESTS_SERVER
      - Q_REQUESTS_TOPIC
      - Q_QUERY_MAX_RUNTIME
      - Q_SLOW_QUERIES
      - Q_CONFIG
    volumes:
      - ./q-config.json:/home/node/dist/server/q-config.json
    networks:
      - {{ q_server_net }}
    expose:
      - "{{ q_server_port }}"
    mem_limit: {{ q_server_mem_limit }}
networks:
  {{ q_server_net }}:
    external: true
